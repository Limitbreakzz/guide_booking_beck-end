generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        Int     @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String   @default("ADMIN")
}

model Tourist {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  tel       String?
  picture   String?  
  role      String   @default("TOURIST")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  bookings Booking[] @relation("TouristBooking")
}

model Guide {
  id          Int    @id @default(autoincrement())
  name        String
  email       String   @unique
  password    String
  tel         String?
  experience  String?
  picture     String?  
  language    String?
  role        String   @default("GUIDE")
  status      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  trips    Trip[]    @relation("GuideTrips")
  bookings Booking[] @relation("GuideBooking")
}

model Province {
  id   Int    @id @default(autoincrement())
  name String @unique

  trips    Trip[]
  bookings Booking[]
}

model Trip {
  id         Int      @id @default(autoincrement())
  name       String
  price      Float?
  provinceId Int
  guideId    Int
  picture    String?  
  isActive   Boolean  @default(true)
  description String?

  province Province @relation(fields: [provinceId], references: [id])
  guide    Guide     @relation("GuideTrips", fields: [guideId], references: [id])
  bookings Booking[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([provinceId])
  @@index([guideId])
}

model Booking {
  id         Int      @id @default(autoincrement())
  datetime   DateTime
  status     String   @default("pending")

  touristId  Int
  guideId    Int
  provinceId Int
  tripId     Int

  tourist  Tourist   @relation("TouristBooking", fields: [touristId], references: [id])
  guide    Guide     @relation("GuideBooking", fields: [guideId], references: [id])
  province Province @relation(fields: [provinceId], references: [id])
  trip     Trip     @relation(fields: [tripId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([touristId])
  @@index([guideId])
  @@index([tripId])
  @@index([provinceId])
}

model Contact {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  subject   String?
  message   String
  createdAt DateTime @default(now())
}